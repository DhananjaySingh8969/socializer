
<link rel="stylesheet" href="<%=assetPath("css/user_password_reset_form.css")%>">
<%if(email){%>
    <div class="reset-form">
        <form id="reset-password-form" method="POST" action="/users/password-update">
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="password" class="form-control" id="reset-password1" placeholder="Password">
              </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Confirm Password</label>
              <input type="password" name="confirm_password" class="form-control" id="reset-password2" placeholder="confirm Password">
            </div>
            <input type="hidden" name="email" value="<%=email%>">
            <button type="submit" class="btn btn-primary" id="resetPasswordSubmit">Submit</button>
        </form>
    </div>
<%}else{%>
    <div class="reset-form">
        <h3>This link has been expired:(</h3>
    </div>
<%}%>
<script src="<%=assetPath("script/reset_form.js")%>"></script>
    
