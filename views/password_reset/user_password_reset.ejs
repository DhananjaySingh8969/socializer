<link rel="stylesheet" href=href="<%=assetPath("css/user_password_reset.css")%>">
<div class="input-group mb-3 reset-email-input">
    <input type="email" class="form-control" placeholder="enter your email.." aria-label="Recipient's username" aria-describedby="basic-addon2">
    <div class="input-group-append">
      <button class="btn btn-dark" type="button" onclick="onResetClick()">Reset</button>
    </div>
</div>
<script>
  function onResetClick()
  {      
       let url="/users/sending-reset-link/"+$('.reset-email-input input').val();
       location.href =url;
  } 
</script>