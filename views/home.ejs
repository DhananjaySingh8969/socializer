<link rel="stylesheet" href="/css/home.css">

<main class="home-main">
    <h1 class=>SOCIALIZER/<%=title%></h1>
    <%if(locals.user){%>
        <div class="post">
            <h3>POST</h3>
             <form id="new-post-form" method="POST" action="/post/create">
                   <textarea name="content" cols="30" rows="3" placeholder="type here...."></textarea>
                   <br><button type="submit">post</button>
             </form>
        </div>
    <%}%>
    
    <div class="list-group post-container">
        <%for(let post of posts){%>
            <div class="list-group-item list-group-item-action post-item">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1"><%=post.user.name%></h5>
                  <small><%=post.createdAt%></small>
                </div>
                <p class="mb-1 overflow-auto"><%=post.content%></p>
                <small></small>
            </div>
        <%}%>
        
        
    </div>
</main>
